        <ImageButton
            android:id="@+id/btn_help_email_address"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/help"
            android:onClick="signUpCompanyPage2"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">
        <EditText
            android:id="@+id/input_website_url"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/login_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Website URL"
            android:inputType=""
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_email_address" />
        <ImageButton
            android:id="@+id/btn_help_website_url"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/help"
            android:onClick="signUpCompanyPage2"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints" />
    </LinearLayout>




    <Button
        android:id="@+id/sign_up_company_page_2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/delft_blue"
        android:onClick="signUpCompanyPage2"
        android:text="Next page"
        android:textSize="24dp"
        android:textColor="@color/middle_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_website_url"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/back_to_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/delft_blue"
        android:onClick="backToLogin"
        android:text="Back to Login"
        android:textSize="24dp"
        android:textColor="@color/middle_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_company_page_2"
        tools:ignore="MissingConstraints" />


</LinearLayout>

