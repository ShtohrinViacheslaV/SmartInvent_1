    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">
        <EditText
            android:id="@+id/input_company_address"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/login_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Company Address"
            android:inputType=""
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_company_name" />
        <ImageButton
            android:id="@+id/btn_help_company_address"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/help"
            android:onClick="signUpCompanyPage2"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
