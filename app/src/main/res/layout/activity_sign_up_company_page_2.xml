<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/middle_yellow"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.SignUpCompanyActivity1">


    <TextView
        android:id="@+id/title_signup"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/title_field"
        android:text="Sign up company - Admin"
        android:textColor="@color/middle_yellow"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">
        <EditText
            android:id="@+id/input_admin_worker_id"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/login_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Worker ID"
            android:inputType=""
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_signup" />
        <ImageButton
            android:id="@+id/btn_help_admin_worker_id"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/help"
            android:onClick="signUpCompanyPage2"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">
        <EditText
            android:id="@+id/input_admin_first_name"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/login_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Administrator First Name"
            android:inputType=""
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_admin_worker_id" />
        <ImageButton
            android:id="@+id/btn_help_admin_first_name"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/help"
            android:onClick="signUpCompanyPage2"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">
        <EditText
                android:id="@+id/input_admin_last_name"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:background="@drawable/login_field"
                android:ems="10"
                android:gravity="center"
                android:hint="Administrator Last Name"
                android:inputType=""
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_admin_first_name" />
        <ImageButton
                android:id="@+id/btn_help_admin_last_name"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/help"
                android:onClick="signUpCompanyPage2"
                android:scaleType="fitCenter"
                tools:ignore="MissingConstraints" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">
        <EditText
            android:id="@+id/input_admin_email"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/login_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Administrator Email"
            android:inputType=""
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_admin_last_name" />
        <ImageButton
            android:id="@+id/btn_help_admin_email"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/help"
            android:onClick="signUpCompanyPage2"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">
        <EditText
            android:id="@+id/input_admin_password"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/login_field"
            android:ems="10"
            android:gravity="center"
            android:hint="Administrator Password"
            android:inputType=""
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_admin_email" />
        <ImageButton
            android:id="@+id/btn_help_admin_password"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/help"
            android:onClick="signUpCompanyPage2"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <Button
        android:id="@+id/sign_up_company_finish"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/delft_blue"
        android:onClick="databaseActivity"
        android:text="Next"
        android:textSize="24dp"
        android:textColor="@color/middle_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_help_sign_up_company_page_2"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/delft_blue"
        android:onClick="backToSignUpCompanyActivity1"
        android:text="Back"
        android:textSize="24dp"
        android:textColor="@color/middle_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_company_finish"
        tools:ignore="MissingConstraints" />




<!--        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />-->


</LinearLayout>