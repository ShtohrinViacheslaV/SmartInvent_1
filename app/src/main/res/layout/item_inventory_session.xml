<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="8dp"
                                   app:cardCornerRadius="12dp"
                                   app:cardElevation="4dp"
                                   app:cardBackgroundColor="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

        <!-- Основна інформація про сесію -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Лінія для назви сесії та кнопки інформації -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical">

                <TextView
                        android:id="@+id/session_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Назва сесії"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                <ImageButton
                        android:id="@+id/btn_description"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:contentDescription="Info"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Статус + Дата початку + Дата завершення -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginTop="4dp">

                <TextView
                        android:id="@+id/session_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Статус"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:gravity="center"/>

                <TextView
                        android:id="@+id/session_start_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Початок"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:gravity="center"/>

                <TextView
                        android:id="@+id/session_end_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Завершення"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Іконка або кнопка переходу -->
        <ImageView
                android:id="@+id/btnOpenSession"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_forward"
                android:contentDescription="Відкрити сесію"
                android:padding="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
